# ----------------------------------------------------------------------------------------------
# AWS Provider
# ----------------------------------------------------------------------------------------------
provider "aws" {
  region = var.region
}

# ----------------------------------------------------------------------------------------------
# AWS Provider - US
# ----------------------------------------------------------------------------------------------
provider "aws" {
  region = local.region_us
  alias  = "global"
}

# ----------------------------------------------------------------------------------------------
# Terraform Settings
# ----------------------------------------------------------------------------------------------
terraform {
  backend "s3" {
    region = "ap-northeast-1"
    bucket = "terraform-state-20210515"
    key    = "ams/services.tfstate"
  }
}

# ----------------------------------------------------------------------------------------------
# Remote state - Setup
# ----------------------------------------------------------------------------------------------
data "terraform_remote_state" "setup" {
  backend   = "s3"
  workspace = terraform.workspace

  config = {
    region = "ap-northeast-1"
    bucket = "terraform-state-20210515"
    key    = "ams/setup.tfstate"
  }
}
