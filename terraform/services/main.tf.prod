# ----------------------------------------------------------------------------------------------
# AWS Provider
# ----------------------------------------------------------------------------------------------
provider "aws" {
  region = var.region
}

# ----------------------------------------------------------------------------------------------
# AWS Provider - US
# ----------------------------------------------------------------------------------------------
provider "aws" {
  region = local.region_us
  alias  = "global"
}

# ----------------------------------------------------------------------------------------------
# Terraform Settings
# ----------------------------------------------------------------------------------------------
terraform {
  backend "s3" {
    region = "us-east-1"
    bucket = "arms-terraform-0603"
    key    = "arms/services.tfstate"
  }
}

# ----------------------------------------------------------------------------------------------
# Remote state - Setup
# ----------------------------------------------------------------------------------------------
data "terraform_remote_state" "setup" {
  backend   = "s3"

  config = {
    region = "us-east-1"
    bucket = "arms-terraform-0603"
    key    = "arms/setup.tfstate"
  }
}
