# ----------------------------------------------------------------------------------------------
# AWS Provider
# ----------------------------------------------------------------------------------------------
provider "aws" {}

# ----------------------------------------------------------------------------------------------
# Terraform Settings
# ----------------------------------------------------------------------------------------------
terraform {
  backend "s3" {
    region = "us-east-1"
    bucket = "terraform-state-202106"
    key    = "arms/backend.tfstate"
  }
}

# ----------------------------------------------------------------------------------------------
# Remote state - Setup
# ----------------------------------------------------------------------------------------------
data "terraform_remote_state" "setup" {
  backend = "s3"

  config = {
    region = "us-east-1"
    bucket = "terraform-state-202106"
    key    = "arms/setup.tfstate"
  }
}

# ----------------------------------------------------------------------------------------------
# Remote state - Services
# ----------------------------------------------------------------------------------------------
data "terraform_remote_state" "services" {
  backend = "s3"

  config = {
    region = "us-east-1"
    bucket = "terraform-state-202106"
    key    = "arms/services.tfstate"
  }
}
