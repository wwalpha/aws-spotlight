{
  "name": "resource-manager",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon ./src/index.ts dotenv_config_path=.env.test",
    "build": "tsc -p tsconfig.build.json",
    "start": "node index.js",
    "test": "jest",
    "presetup": "ts-node -r dotenv/config test/configs/teardown.dev.ts",
    "setup": "ts-node -r dotenv/config test/configs/setup.dev.ts"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.76",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/node": "^15.3.0",
    "@types/supertest": "^2.0.11",
    "dotenv": "^9.0.2",
    "jest": "^27.0.4",
    "nodemon": "^2.0.7",
    "superagent": "^6.1.0",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.2",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.2.10",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@alphax/dynamodb": "^1.1.2",
    "aws-sdk": "^2.907.0",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "winston": "^3.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "delay": 3,
    "ignore": [
      "node_modules/*"
    ],
    "execMap": {
      "ts": "ts-node -r tsconfig-paths/register -r dotenv/config"
    },
    "events": {
      "crash": "sh -c 'lsof -i :${PORT:-8080} -t | xargs kill'"
    }
  }
}
