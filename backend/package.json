{
  "name": "aws-spotlight-backend",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/wwalpha/aws-spotlight.git",
  "author": "wwalpha <wwalpha@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon ./src/index.ts",
    "build": "tsc",
    "build:alias": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "test": "jest --forceExit --detectOpenHandles",
    "debug": "ts-node -r tsconfig-paths/register -r dotenv/config test/debug1.ts",
    "prep": "ts-node -r tsconfig-paths/register -r dotenv/config debug.ts"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.76",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.169",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.3",
    "aws-sdk-mock": "^5.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^9.0.2",
    "jest": "^26.6.3",
    "ngrok": "^4.0.1",
    "nodemon": "^2.0.7",
    "source-map-support": "^0.5.19",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "tsc-alias": "^1.2.10",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@alphax/dynamodb": "^1.0.8",
    "aws-sdk": "^2.906.0",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "short-uuid": "^4.2.0",
    "winston": "^3.3.3"
  },
  "nodemonConfig": {
    "watch": [
      "src/**/*.ts"
    ],
    "delay": 3,
    "ignore": [
      "node_modules/*"
    ],
    "execMap": {
      "ts": "ts-node -r tsconfig-paths/register -r dotenv/config"
    },
    "events": {
      "crash": "sh -c 'lsof -i :${PORT:-8080} -t | xargs kill'"
    }
  }
}
