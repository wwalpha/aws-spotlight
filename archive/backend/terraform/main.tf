# ----------------------------------------------------------------------------------------------
# AWS Provider
# ----------------------------------------------------------------------------------------------
provider "aws" {
  region = "us-east-1"
}

# ----------------------------------------------------------------------------------------------
# Terraform Settings
# ----------------------------------------------------------------------------------------------
terraform {
  backend "s3" {
    region = "us-east-1"
    bucket = "arms-terraform-0606"
    key    = "arms-dev/backend.tfstate"
  }
}

# ----------------------------------------------------------------------------------------------
# Remote state - Setup
# ----------------------------------------------------------------------------------------------
data "terraform_remote_state" "setup" {
  backend = "s3"

  config = {
    region = "us-east-1"
    bucket = "arms-terraform-0606"
    key    = "arms-dev/setup.tfstate"
  }
}

# ----------------------------------------------------------------------------------------------
# Remote state - Services
# ----------------------------------------------------------------------------------------------
data "terraform_remote_state" "services" {
  backend = "s3"

  config = {
    region = "us-east-1"
    bucket = "arms-terraform-0606"
    key    = "arms-dev/services.tfstate"
  }
}
